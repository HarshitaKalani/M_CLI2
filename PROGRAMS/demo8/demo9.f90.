program demo8
!! QUICK PROTOTYPE: JUST THE BARE ESSENTIALS
use M_CLI2,  only : set_args, get_args
implicit none
integer                      :: x, y
logical                      :: l
real                         :: size
character(len=:),allocatable :: title
character(len=80)            :: title2
   call set_args('-x 1 -y 10 --size 12.34567  -l F --title "my title" -title2 "my other title"')
   ! only fixed scalar values (including only character variables that are allocated or fixed length) may be combined in one call
   call get_args('x',x, 'y',y, 'l',l, 'size',size, 'title2',title2)
   call get_args('title',title) !! works by itself, will not work unless pre-allocated with multiple values
   allocate(character(len=80) :: title) 
   write(*,'(1("[",g0,"=",g0,"]":,1x))')'X',x,'Y',y,'SIZE',size,'L',l,'TITLE2',title2,'TITLE',title
end program demo8
